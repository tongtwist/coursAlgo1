    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "mochawesome": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.4.4"
  },
  "type": "module"
}
