{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES6",
		"outDir": "./lib/",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	],
	"typedocOptions": {
		"entryPoints": [
			"./src"
		],
		"exclude": [
			"./test/**/*"
		],
		"out": "./doc",
		"pretty": true,
		"entryPointStrategy": "expand",
		"media": "./media"
	}
}
